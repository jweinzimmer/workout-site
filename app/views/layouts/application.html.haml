!!!
%html
  %head
    %title WorkoutWebsite
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "jquery-1.4.2.min", "data-turbolinks-track", "highcharts", "highcharts-more" => true
    = csrf_meta_tags
  %body
    %nav.top-bar{"data-topbar" => ""}
      %ul.title-area
        %li.name
          %h1
            %a{href: "#"} Workout Tracker
        %li.toggle-topbar.menu-icon
          %a{href: "#"} Menu
      %section.top-bar-section
        / Right Nav Section
        %ul.right
          - if user_signed_in?
            %li
              %a=link_to current_user.full_name
          %li
            %a{href: "#"} About    
          %li
            %a{href: "#"} Contact Info
          %li
            %a{href: "#"} Forum
          /- if user_signed_in? == true
          - if user_signed_in?
            %li= link_to current_user.first_name, edit_user_registration_path
            %li= link_to "sign Out", destroy_user_session_path, method: :delete
          - if !user_signed_in?
            %li= link_to "Sign In", new_user_session_path  
        / Left Nav Section
        %ul.left
          %li= link_to "Homepage", root_path
    .leftside.large-4.columns
      %ul#topss2
        %li
          %a{href: "test.html"} Homepage
        %li
          %a{href: "#"} Personal fitness advice
        %li
          %a{href: "#"} Celebrities and their secrets  
        %li
          %a{href: "#"} Diet plans
        - if user_signed_in?  
          %li
            %a{href: "#"} Track Your Calories
          %li= link_to "Add Supplement", new_supplement_path
          %li= link_to "Add Workout", new_workout_path
          %li=link_to 'Enter Your Stats', new_stat_path
          %li=link_to 'Plans', plans_path
        %li#botlist
          %a{href: "#"} Calorie/Carb counter 
    %p.notice= notice
    %p.alert= alert    
       
    = yield
