!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "foundation-rails"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr", "application", "fullcalendar", "jquery.js"
    = csrf_meta_tags
    %link{href: "/assets/fullcalendar.css", rel: "stylesheet", type: "text/css"}
    %script{src: "/assets/fullcalendar.js", type: "text/javascript"}
    %script{src: "/assets/jquery.ui.all", type: "text/javascript"}
  %body
    .topBG
      .row.border
        %nav.top-bar{"data-topbar" => ""}
          %ul.title-area
            %li.name
              %h1
                %a{href: "#"} Workout Tracker
            %li.toggle-topbar.menu-icon
              %a{href: "#"} Menu
          %section.top-bar-section
            / Right Nav Section
            %ul.right
              - if user_signed_in?
                %li
                  %a=link_to current_user.full_name   
              %li
                %a{href: "#"} Contact Info
              %li
                %a{href: "#"} Forum
              /- if user_signed_in? == true
              - if user_signed_in?
                %li= link_to current_user.first_name, edit_user_registration_path
                %li= link_to "Add Supplement", new_supplement_path
                %li= link_to "Add Workout", new_workout_path
                %li=link_to 'Enter Your Stats', new_stat_path
                %li= link_to "sign Out", destroy_user_session_path, method: :delete
              - if !user_signed_in?
                %li= link_to "Sign In", new_user_session_path
            
            

                  
      .row.data-equalizer.border
        .main
          .leftside.small-2.columns
            %ul#topss2.data-equalizer-watch
              %li= link_to "Homepage", root_path
              %li
                %a{href: "#"} Personal fitness advice
              %li
                %a{href: "#"} Celebrities and their secrets  
              %li
                %a{href: "#"} Diet plans
              - if user_signed_in?  
                %li
                  %a{href: "#"} Track Your Calories
                %li= link_to "Add Supplement", new_supplement_path
                %li= link_to "Add Workout", new_workout_path
                %li=link_to 'Enter Your Stats', new_stat_path
                %li=link_to 'Plans', plans_path
                %li=link_to "New Plan", new_plan_path
              %li#botlist
                %a{href: "#"} Calorie/Carb counter 
            %p.notice= notice
            %p.alert= alert
          = yield
      #botBG
        .row.borderm#blues
          #heighz.small-2.columns
          .small-3.columns#footer
            %li=link_to 'Enter Your Stats', new_stat_path
            %li=link_to 'Plans', plans_path
            %li=link_to "New Plan", new_plan_path
          .small-3.columns#footer
            %li=link_to 'Enter Your Stats', new_stat_path
            %li=link_to 'Plans', plans_path
            %li=link_to "New Plan", new_plan_path
          .small-4.columns#footer
            %li=link_to 'Enter Your Stats', new_stat_path
            %li=link_to 'Plans', plans_path
            %li=link_to "New Plan", new_plan_path